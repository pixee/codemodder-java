String sanitizeZipFilename(String entryName) {
    if (entryName == null || entryName.trim().isEmpty()) {
        return entryName;
    }
    while (entryName.contains("../") || entryName.contains("..\\")) {
        entryName = entryName.replace("../", "").replace("..\\", "");
    }
    return entryName;
}
