package something;

import javax.naming.directory.DirContext;
import javax.naming.directory.InitialDirContext;
import javax.naming.directory.SearchControls;

public final class Test {

  public static final SearchControls posField = new SearchControls(0, 0, 0, null, true, false);
  public static final SearchControls negField = new SearchControls(0, 0, 0, null, false, false);

  public void directInstantiation() {
    DirContext ctx = new InitialDirContext();
    ctx.search("query", "filter", new SearchControls(0, 0, 0, null, false, false));
  }

  public void doublyDirectInstantiation() {
    new InitialDirContext()
        .search("query", "filter", new SearchControls(0, 0, 0, null, false, false));
  }

  public void indirectInstantiation() {
    DirContext ctx = new InitialDirContext();
    SearchControls controls = new SearchControls(0, 0, 0, null, true, false);
    ctx.search("query", "filter", new SearchControls(controls.getSearchScope(), controls.getCountLimit(), controls.getTimeLimit(), controls.getReturningAttributes(), false, controls.getDerefLinkFlag()));
  }

  public void anotherTypeOfCall() {
    DirContext ctx = new InitialDirContext();
    SearchControls controls = new SearchControls(0, 0, 0, null, true, false);
    ctx.search("query", "filter", null, new SearchControls(controls.getSearchScope(), controls.getCountLimit(), controls.getTimeLimit(), controls.getReturningAttributes(), false, controls.getDerefLinkFlag()));
  }

  public void outsideControls(SearchControls controls) {
    DirContext ctx = new InitialDirContext();
    ctx.search("query", "filter", new SearchControls(controls.getSearchScope(), controls.getCountLimit(), controls.getTimeLimit(), controls.getReturningAttributes(), false, controls.getDerefLinkFlag()));
  }

  public void noControlsNoFix() {
    DirContext ctx = new InitialDirContext();
    ctx.search("name", null, new String[0]);
  }

  public void noFix() {
    DirContext ctx = new InitialDirContext();
    SearchControls controls = new SearchControls(0, 0, 0, null, false, false);
    ctx.search("query", "filter", controls);
  }

  public void negFieldNoFix() {
    DirContext ctx = new InitialDirContext();
    ctx.search("query", "filter", negField);
  }

  public void posField() {
    DirContext ctx = new InitialDirContext();
    ctx.search("query", "filter", new SearchControls(posField.getSearchScope(), posField.getCountLimit(), posField.getTimeLimit(), posField.getReturningAttributes(), false, posField.getDerefLinkFlag()));
  }
}
